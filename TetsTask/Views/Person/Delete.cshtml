@model TetsTask.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Delete Person</h2>

<h3>Are you sure you want to delete the following record?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Married
        </dt>
        <dd class="col-sm-10">
            @(Model.IsMarried ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.Salary
        </dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
